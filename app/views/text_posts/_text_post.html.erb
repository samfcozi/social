<% cache text_post do %>
  <% sleep 1 if false %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= text_post.title %>
      </h3>
      <%= link_to("#{time_ago_in_words text_post.created_at} ago", post_path(text_post)) %>
    </div>

    <div class="panel-body">
      <p><em>By <%= link_to text_post.user.name, text_post.user %></em></p>

      <% if false %>
        <%= text_post.body %>
        <%= sanitize text_post.body %>
        <%= raw text_post.body %>
      <% end %>

      <%= text_post.body %>

      <p><%= pluralize text_post.cached_comment_count, "Comment" %></p>

      <%= debug text_post if false %>

    </div>
  </div>
<% end %>

<% if text_post.user == current_user %>
  <p>
    <%= link_to 'Edit', edit_text_post_path(text_post), class: "btn btn-default" %>
  </p>
<% end %>
